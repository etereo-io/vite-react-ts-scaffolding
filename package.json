{
  "name": "vite-react-ts-scaffolding",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "start": "npm run dev",
    "build": "tsc && vite build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:deps": "npx depcruise src",
    "types:check": "tsc --noEmit",
    "git:pre-commit": "npm run types:check && npm run lint:deps && lint-staged",
    "test:base": "vitest --passWithNoTests",
    "test": "npm run test:coverage",
    "test:ui": "npm run test:base -- --ui",
    "test:run": "npm run test:base -- --run",
    "test:coverage": "npm run test:base -- --run --coverage",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "lint-staged": {
    "(src)/**/*.(ts|tsx)": ["biome check --write"]
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "@tanstack/react-query": "^5.80.7",
    "axios": "^1.9.0",
    "deepmerge-ts": "^7.1.5",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "intersection-observer": "^0.12.2",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.514.0",
    "query-string": "^9.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.3",
    "react-router": "^7.6.2",
    "tailwindcss": "^4.1.10",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@faker-js/faker": "^9.8.0",
    "@juggle/resize-observer": "^3.4.0",
    "@modyfi/vite-plugin-yaml": "^1.1.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "@vitest/coverage-v8": "^3.2.3",
    "dependency-cruiser": "^16.10.2",
    "husky": "^9.1.7",
    "install": "^0.13.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "matchmedia-polyfill": "^0.3.2",
    "msw": "^2.10.2",
    "react-remove-attr": "^0.0.6",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-checker": "^0.9.3",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^3.2.3",
    "vitest-sonar-reporter": "^2.0.1"
  }
}
